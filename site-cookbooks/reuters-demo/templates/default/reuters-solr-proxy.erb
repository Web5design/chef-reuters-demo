#!/bin/bash
# init.d script for Nodejs proxy server
# Generated by Chef for <%= node[:fqdn] %>

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
NODE_PATH=/usr/local/lib/node_modules
FOREVER_LOG=<%= @forever_logfile %>
case $1 in
  start)
    cd <%= @dir %>
    forever start -a -l $FOREVER_LOG -o $FOREVER_LOG -e $FOREVER_LOG reuters-solr-proxy.js
    ;;
  stop)
    forever stop reuters-solr-proxy.js
    ;;
  *)
    echo "usage: /etc/init.d/reuters-solr-proxy {start|stop}" ;;
esac

exit 0
